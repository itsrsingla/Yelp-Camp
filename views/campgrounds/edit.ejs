<%- include('../partials/header') %>
<div class = "container">
    <div class=" text-center">
        <h1> Edit <%=campground.name%></h1>
    </div>
    <div style=" width : 50%; margin : 25px auto;">    
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Enter the name of the site</label>
                <input id="name" class="form-control" value="<%=campground.name%>" name="campground[name]" type="text">
            </div>
            <div class="form-group">
                <label for="name">Enter the price of the site</label>
                <input id="name" class="form-control" value= "<%=campground.price%>" name="campground[price]" type="number" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Enter the url of image</label>
                <input id="image" class="form-control" value="<%=campground.image%>" name="campground[image]" type="text">
            </div>
            <div class="form-group">
                <label for="description">Enter Description</label>
                <input id="description" class="form-control" value="<%=campground.description%>" name="campground[description]" type="text">
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-lg" style="width: 100%;">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>    
</div>
<%- include('../partials/footer') %>